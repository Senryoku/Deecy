{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "zig build",
			"group": "build",
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "build-mmu",
			"type": "shell",
			"command": "zig build -Dmmu=true",
			"group": "build",
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "build-release-safe",
			"type": "shell",
			"command": "zig build -Doptimize=ReleaseSafe",
			"group": "build",
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "build-release-fast",
			"type": "shell",
			"command": "zig build -Doptimize=ReleaseFast",
			"group": "build",
			"problemMatcher": ["$gcc"]
		}
	]
}
